doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title= title
    script(src="https://kit.fontawesome.com/9d4db42bbb.js" crossorigin="anonymous")
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6' crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/style.css')
    block link
  body
    .wrapper
      nav.nav 
        .nav-logo
          a.logo_link(href='/main')
            h1 PROMPT
            h4 SOLUTION
        .nav-sub-menu
          ul
            li 
              a(href='/manage/emp/EMP_NAME?dept_name=전체&emp_name=') 경영관리
            li 
              a(href='/project') 프로젝트관리
            li 
              a(href='#') 지식관리
            li 
              a(href='#') 인사관리
            li 
              a(href='#') 복지신청
            li 
              a(href='#') 게시판
      aside.sidebar
        section.namespace
          .namespace-icon
            i.fas.fa-user.fa-4x
          .namespace-welcome
            h4 안녕하세요
            h6=`${user.DEPT_NAME}부서 ${user.EMP_NAME}님!`
        section.search
          form#form(action='/search/result/EMP_NAME' method='get')
            h4 직원검색
            select#dept_select(name="dept_name")
              option(value="전체") 전체
              option(value="경영진") 경영진
              option(value="경영") 경영팀
              option(value="개발") 개발팀
              option(value="재무") 재무부서
              option(value="인사") 인사부서
              option(value="경영지원") 경영지원부서
              option(value="기획") 기획부서
              option(value="법무") 법무부서
              option(value="마케팅") 마케팅부서
              option(value="보안") 보안부서
              option(value="디자인") 디자인부서
              option(value="모바일") 모바일부서
              option(value="프론트엔드") 프론트엔드부서
              option(value="백엔드") 백엔드부서
              option(value="데이터분석") 데이터분석부서
              option(value="테스트") 테스트부서
            input(type="search", name="emp_name" placeholder='직원명 입력')
            button(type='submit')#search_btn.btn.btn-primary 검색
      section.main-contents
        header.subtitle
          block subTitle 
        article.contents
          block content
